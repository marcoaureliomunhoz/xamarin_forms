             xmlns:local="clr-namespace:anima1"
             x:Class="anima1.MainPage">

    <StackLayout Padding="20">
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Esconder" x:Name="btnEsconder"/>
            <Button Text="Mostrar" x:Name="btnMostrar"/>
            <Button Text="Cancelar" x:Name="btnCancelar"/>
